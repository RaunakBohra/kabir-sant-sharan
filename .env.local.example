# Kabir Sant Sharan - Environment Configuration
# Copy this file to .env.local and update with your actual values
# NEVER commit .env.local to version control

# JWT Configuration
JWT_SECRET=your-256-bit-random-secret-key-change-this-in-production
JWT_REFRESH_SECRET=your-different-256-bit-refresh-secret-key-change-this
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Admin Configuration
ADMIN_EMAIL=admin@kabirsantsharan.com
ADMIN_PASSWORD_HASH=$2b$12$generated-bcrypt-hash-will-go-here

# Rate Limiting Configuration
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_AUTH_WINDOW=60000
RATE_LIMIT_API_MAX=100
RATE_LIMIT_API_WINDOW=900000

# Database Configuration (for Cloudflare Workers)
DATABASE_URL=your-d1-database-url
DATABASE_AUTH_TOKEN=your-d1-auth-token

# Security Configuration
CORS_ORIGIN=http://localhost:5002,https://kabirsantsharan.com
BCRYPT_SALT_ROUNDS=12

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn-for-error-tracking
LOG_LEVEL=info

# Environment
NODE_ENV=development
ENVIRONMENT=development